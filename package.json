{
  "name": "ts-template",
  "version": "0.0.0",
  "description": "",
  "main": "main.js",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts,.js --quiet --ignore-path .gitignore",
    "test": "jest --coverage",
    "prepack": "npm run build",
    "build": "tsc"
  },
  "files": [
    "dist",
    "*.d.ts",
    "*.d.ts.map"
  ],
  "dependencies": {
    "esm": "^3.2.25"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@tpluscode/eslint-config": "^0.1.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "lint-staged": "^10.0.7",
    "standard": "^14.3.1",
    "typescript": "^3.7.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tpluscode/ts-template.git"
  },
  "author": "Tomasz Pluskiewicz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tpluscode/ts-template/issues"
  },
  "homepage": "https://github.com/tpluscode/ts-template#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && tsc --noEmit"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet --ignore-path .gitignore"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testRegex": "tests/.+\\.ts$"
  }
}
